@model acuity_tooll.Models.ACUITY_EV

@{
    ViewBag.Title = "Delete";
}

<br />
<br />
<h3 style="color:red">Are you sure you want to delete this acuity ?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
          MRN
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ACUITY_TOOL.MRN)
        </dd>

        <dt>
            Patient Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ACUITY_TOOL.P_NAME)
        </dd>

        <dt>
           Room
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ACUITY_TOOL.ROOM)
        </dd>

        <dt>
           Addimion Date 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ACUITY_TOOL.ADD_DATE)
        </dd>

        <dt>
           Acuity Date 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ADD_DATE)
        </dd>

        <dt>
           Shift
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SHIFT)
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "acuitylist")
        </div>
    }
</div>
